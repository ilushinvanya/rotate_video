{
  "manifest_version": 2,
  "name": "Rotate video",
  "version": "2.0",
  "icons": { 
  	"16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "scripts": [
      "background.js",
      "rotate_init.js"
    ],
    "persistent": false
  },
  "permissions": ["activeTab"],
  "browser_action": {
    "default_title": "Rotate video",
    "default_icon": "icons/32.png"
  }
}